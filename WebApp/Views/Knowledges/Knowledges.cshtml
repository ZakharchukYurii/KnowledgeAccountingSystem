@{
    ViewBag.Title = "Knowledges";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/AppScripts/Knowledges.js"></script>

<style>
    #editBlock {
        display: none;
    }
</style>

<h2>Knowledges</h2>
<div id="tableBlock"></div>
<div id="editBlock">
    <h3>Edit</h3>
    <table>
        <tr><td><input type="hidden" id="editId" /></td><td></td></tr>
        <tr><td><label>Name: </label></td><td><input type="text" id="editName" /></td></tr>
        <tr><td><label>AreaId: </label></td><td><input type="number" id="editAreaId" /></td></tr>
    </table>
    <button id="editItemButton">Save</button>
    <button id="cancelEdit">Cancel</button>
</div>
<div id="createBlock">
    <h3>Add</h3>
    <table>
        <tr><td><label>Name: </label></td><td><input type="text" id="addName" /></td></tr>
        <tr><td><label>AreaId: </label></td><td><input type="number" id="addAreaId" /></td></tr>
    </table>
    <button id="addItemButton">Add</button>
</div>
