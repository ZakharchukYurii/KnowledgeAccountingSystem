@*<script src="~/Scripts/app.js"></script>*@
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/AppScripts/Index.js"></script>

<div id="login" class="row">
    <div class="col-sm-4">
        <div style="margin-top: 20px">
            <label>User ID: </label>
            <input type="number" id="inputUserId" />
            <button id="showUserButton">Show</button>
        </div>
        <div id="userBox">
            <table>
                <tr>
                    <td><h4>Name: </h4></td>
                    <td><h4 id="userName"></h4></td>
                    <td><input type="text" id="inputUserName" style="display:none" /></td>
                </tr>
                <tr>
                    <td><h5>User id: </h5></td>
                    <td><h5 id="userId"></h5></td>
                    <td></td>
                </tr>
                <tr>
                    <td><h5>Full Name: </h5>
                    <td><h5 id="userFullName"></h5></td>
                    <td><input type="text" id="inputUserFullName" style="display:none" /></td>
                </tr>
                <tr>
                    <td><h5>E-mail: </h5>
                    <td><h5 id="userEMail"></h5></td>
                    <td><input type="text" id="inputUserEMail" style="display:none" /></td>
                </tr>
            </table>

            <input type="hidden" id="hidenUserId" />
            <button id="showEditUserMenu" style="display:none">Edit user data</button>
            <button id="editUser" style="display:none">Save changes</button>
            <button id="cancelEditUser" style="display:none">Cancel</button>

            <div id="knowledgeBlock"></div>
            <button id="showAddBlockButton" style="display:none">Add new knowledge</button>
        </div>
    </div>
    <div class="col-sm-4" style="display:none">
        <h3>Log In</h3>
        <form data-bind="submit: login">
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" data-bind="value: loginEmail" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" data-bind="value: loginPassword" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Log In</button>
                <button data-bind="click: logout" class="btn btn-default">Log Out</button>
            </div>
        </form>
    </div>
    <div class="col-sm-4" style="display:none">
        <form data-bind="submit: register">
            <h3>Register</h3>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" data-bind="value: registerEmail" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" data-bind="value: registerPassword" />
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input class="form-control" type="password" data-bind="value: registerPassword2" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Register</button>
            </div>
        </form>
    </div>
</div>

<div id="editKnowledge" style="display:none">
    <h3>Edit knowledge</h3>
    <table>
        <tr><td><input type="hidden" id="editId" /></td><td></td></tr>
        <tr><td><label>KnowledgeId: </label></td><td><input type="number" id="editKnowledgeId" /></td></tr>
        <tr><td><label>Rate: </label></td><td><input type="number" id="editRate" /></td></tr>
    </table>
    <button id="editKnowledgeButton">Save</button>
    <button id="cancelEditButton">Cancel</button>
</div>
<div id="addKnowledge" style="display:none">
    <h3>Add knowledge</h3>
    <table>
        <tr><td><label>KnowledgeId: </label></td><td><input type="number" id="addKnowledgeId" /></td></tr>
        <tr><td><label>Rate: </label></td><td><input type="number" id="addRate" /></td></tr>
    </table>
    <button id="addKnowledgeButton">Add</button>
    <button id="cancelAddButton">Cancel</button>
</div>
